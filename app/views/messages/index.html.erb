<h3>Messages</h3>
<hr />
<% @messages.each do |message| %>
  <p><%= message.user.username %>: <%= message.body %></p>
<% end %>
<hr />
<%= form_for [@conversation, Message.new] do |f| %>
 <div class="field">
   <%= f.text_area :body %>
   <%= f.hidden_field :user_id, :value => current_user.id %>
 </div>
 <div class="actions">
   <%= f.submit "Send" %>
 </div>
<% end %>
