
<%= form_for [Post.new] do |f| %>
  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.label :link %>
    <p><%= f.url_field :body, :value => "http://" %></p>
    <%= f.label :link_title %>
    <p><%= f.text_field :title %></p>
    <%= f.label :summary %>
    <p><%= f.text_area :summary %></p>
    <%= f.label :level_of_government %>
    <p><%= f.select :level, [['National', 'national'],['State', 'state'],['Local', 'local']] %></p>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
