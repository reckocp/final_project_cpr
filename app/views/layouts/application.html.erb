<!DOCTYPE html>
<html>
<head>
  <title>Assembly Point</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Bitter' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="container">
        <nav class='navbar navbar-default'>
          <div class="container-fluid">
            <div class="navbar-header">
              <a class='navbar-brand'>
                <i class="fa fa-compass fa-1x" id="logo" aria-hidden="true"></i>
                Assembly Point
              </a>
            </div>
            <div class='navbar-collapse collapse'>
              <% if user_signed_in? %>
                <ul class="nav navbar-nav navbar-right">
                  <li> <%= link_to "Home", politicians_path, class: "nav-link" %> </li>
                  <li> <%= link_to "Local", politicians_local_path, method: :get, class: "nav-link" %> </li>
                  <li> <%= link_to "State", politicians_state_path, method: :get, class: "nav-link" %> </li>
                  <li> <%= link_to "National", politicians_national_path, method: :get, class: "nav-link" %> </li>
                  <li class="nav-dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                      <li><p><%= link_to "Profile", user_path(current_user), method: :get %></p></li>
                      <li><p><%= link_to "Inbox", conversations_path, method: :get %></p></li>
                      <li><p><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-link" %></p></li>
                    </ul>
                  </li>
                </ul>
              <% else %>
                <ul class="nav navbar-nav navbar-right">
                  <li> <%= link_to "Home", root_path, class: "nav-link" %> </li>
                  <li><a href="#mySignInModal" data-toggle="modal" data-target="#mySignInModal", class="nav-link">Sign In</a></li>
                  <li><a href="#mySignUpModal" data-toggle="modal" data-target="#mySignUpModal", class="nav-link">Sign Up</a></li>
                </ul>
              <% end %>
            </div>
          </div>
        </nav>
        <div class="modal fade" id="mySignInModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Assembly Point</h4>
              </div>
              <div class="modal-body">
                <%= render partial: 'devise/sessions/new' %>
              </div>
            </div>
          </div>
        </div>
        <div class="modal fade" id="mySignUpModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Assembly Point</h4>
              </div>
              <div class="modal-body">
                <%= render partial: 'devise/registrations/new' %>
              </div>
            </div>
          </div>
        </div>
    <% flash.each do |key, value| %>
             <div class="alert alert-<%= key %> alert-dismissable">
                 <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                 <%= value %>
             </div>
    <% end %>
      <div class="bulk">
        <div class="borderBox">
  <%= yield %>
        </div>
      </div>
    </div>
</body>
</html>
